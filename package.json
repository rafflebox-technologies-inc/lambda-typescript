{
  "name": "@rafflebox-technologies-inc/quick-start",
  "version": "1.0.0",
  "main": "index.js",
  "description": "A simple example of a quick start for a new project",
  "license": "MIT",
  "author": "Rafflebox",
  "engines": {
    "node": "^14 || ^16"
  },
  "scripts": {
    "clean": "rm -rf build/",
    "build": "yarn clean && tsc",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml}\"",
    "lint": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --max-warnings 100",
      "git add"
    ],
    "*.{ts,js,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.0.3",
    "eslint": "^8.19.0",
    "husky": "~8.0.1",
    "lint-staged": "~13.0.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  }
}
