{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2020", "DOM"],
    "esModuleInterop": true,
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "declaration": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node"],
    "outDir": "build",
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["src/**/*.ts"]
}
