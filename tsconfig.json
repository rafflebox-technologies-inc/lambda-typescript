{
  "compilerOptions": {
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "allowJs": false,
    "target": "es2020",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "declaration": true,
    "types": ["node", "jest"],
    "outDir": "build",
    "typeRoots": ["src/types", "node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
